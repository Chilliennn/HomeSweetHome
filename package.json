{
  "name": "home-sweet-home",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "dev:mobile": "pnpm --filter @home-sweet-home/mobile dev",
    "dev:web": "pnpm --filter @home-sweet-home/web-admin dev",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "~5.9.2"
  }
}
